<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"


    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_account_circle_24"
            />

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_photo"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/menu_image_button"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:text="Name" />

        <TextView
            android:id="@+id/upload_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/user_photo"
            android:layout_below="@+id/user_name_text_view"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:text="Date" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/menu_image_button"
            android:clickable="true"
            android:padding="5dp"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/user_custom_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_photo"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:text="Some Text Entered By The User" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/file_type_image"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_attach_file_24"
            android:layout_below="@+id/user_custom_text_view"
            />
        <TextView
            android:id="@+id/file_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_custom_text_view"
            android:layout_toEndOf="@+id/file_type_image"
            android:layout_marginTop="18dp"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:text="Name of the file" />
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>